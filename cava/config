## Configuration file for CAVA.
# Remove the ; to change parameters.
vertex_shader = '~/.config/cava/shaders/pass_through.vert'
fragment_shader = '~/.config/cava/shaders/bar_spectrum.frag'

[general]
# Smoothing mode. Can be 'normal', 'scientific' or 'waves'. DEPRECATED as of 0.6.0
; mode = normal

# Accepts only non-negative values.
; framerate = 60

# Autosens and overshoot settings (Dynamic range)
; autosens = 1
; overshoot = 20

# Sensitivity in %. 200 means double height. Accepts only non-negative values.
; sensitivity = 100

# The number of bars (0-512). 0 sets it to auto (fill up console).
; bars = 0
; bar_width = 2
; bar_spacing = 1
; bar_height = 32

# Lower and higher cutoff frequencies for the visualizer bandwidth
; lower_cutoff_freq = 50
; higher_cutoff_freq = 10000

# Seconds with no input before cava goes to sleep mode. 0 = disable.
; sleep_timer = 0

[input]
# Audio capturing method (pulse, alsa, etc.)
; method = pulse
; source = auto

# For PulseAudio, PipeWire, ALSA, etc. method can be selected based on your system.
; sample_rate = 44100
; sample_bits = 16
; channels = 2
; autoconnect = 2

[output]
# Output method. Can be 'ncurses', 'noncurses', 'raw', 'noritake', 'sdl'
; method = noncurses

# Color settings for visualizer output
[color]
gradient = 1

gradient_color_1 = '#8bd5ca'
gradient_color_2 = '#91d7e3'
gradient_color_3 = '#7dc4e4'
gradient_color_4 = '#8aadf4'
gradient_color_5 = '#c6a0f6'
gradient_color_6 = '#f5bde6'
gradient_color_7 = '#ee99a0'
gradient_color_8 = '#ed8796'

[smoothing]
# Adjust smoothing settings for better visual quality
; noise_reduction = 77

[eq]
# Adjust equalizer settings for better control
; 1 = 1 # bass
; 2 = 1
; 3 = 1 # midtone
; 4 = 1
; 5 = 1 # treble

